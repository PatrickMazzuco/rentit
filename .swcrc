{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true
    },
    "target": "es2021",
    "keepClassNames": true,
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@middlewares/*": ["middlewares/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "module": {
    "type": "commonjs"
  }
}
